<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">blog_tag_form.blog_tag_form_data_source</item>
            <item name="deps" xsi:type="string">blog_tag_form.blog_tag_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Tag Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Boolfly\Blog\Block\Adminhtml\Edit\BackButton</item>
            <item name="reset" xsi:type="string">Boolfly\Blog\Block\Adminhtml\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Boolfly\Blog\Block\Adminhtml\Edit\SaveButton</item>
        </item>
    </argument>
    <settings>
        <namespace>blog_tag_form</namespace>
        <dataScope>data</dataScope>
    </settings>
    <dataSource name="blog_tag_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Boolfly\Blog\Ui\DataProvider\TagDataProvider</argument>
            <argument name="name" xsi:type="string">blog_tag_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">tag_id</argument>
            <argument name="requestFieldName" xsi:type="string">tag_id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
                <item name="submit_url" path="*/*/save" xsi:type="url"/>
            </item>
        </argument>
    </dataSource>
    <fieldset name="tag" sortOrder="10">
        <settings>
            <collapsible>false</collapsible>
            <label/>
        </settings>
        <field name="tag_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">boolfly_blog_tag</item>
                </item>
            </argument>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Name</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">boolfly_blog_tag</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="url_key">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">URL Key</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">boolfly_blog_tag</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>